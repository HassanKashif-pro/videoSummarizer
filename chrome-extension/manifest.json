{
    "manifest_version": 3,
    "name": "Summify",
    "version": "1.0.0",
    "icons": {
        "32": "/icons/SUMMIFY.png"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
        "default_icon": "/icons/SUMMIFY.png",
        "default_title": "Summify Video Summarizer",
        "default_popup": "popup.html"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
